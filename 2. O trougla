#include <iostream>
#include <cmath> //biblioteka za matematičke funkcije
using namespace std;
	/*
		Program koji računa obim trougla ako korisnik
		unosi dvije katete.
	*/

int main(){
	int a,b,c,o;
	cout<<"Unesite prvu katetu: ";
	cin>>a;
	cout<<"Unesite drugu katetu: ";
	cin>>b;
	
	c=sqrt(a*a+b*b);
	o=a+b+c;
	cout<<"Treca kateta iznosi "<<c<<"a obim "<<o<<endl;
	
	
	return 0;
}
	
	
