#include <iostream>
#include <cmath> //biblioteka za matematičke funkcije
using namespace std;
	/*
		Program koji računa površinu trougla 
		ako korisnik unosi stranice.
	*/

int main(){
	int a,b,c,s,p;
	cout<<"Unesite str a, b i c :"<<endl;
	cin>>a>>b>>c;
	
	s=(a+b+c)/2;
	p=sqrt(s*(s-a)*(s-b)*(s-c));
	cout<<"Povrsina je: "<<p<<endl;
	
	return 0;
}
