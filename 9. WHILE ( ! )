#include <iostream>
#include<string>
using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	string rijec;
	
	while(rijec!="kraj"){    //petlja se ponavlja sve dok korisnik ne unese rijec "kraj"
		cout<<"Unesite rijec: ";
		getline(cin,rijec);
	}
	return 0;
}
